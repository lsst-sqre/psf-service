<uws:results
    version="1.1"
    xsi:schemaLocation="http://www.ivoa.net/xml/UWS/v1.0 UWS.xsd"
    xmlns:xml="http://www.w3.org/XML/1998/namespace"
    xmlns:uws="http://www.ivoa.net/xml/UWS/v1.0"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  {%- for result in job.results %}
  <uws:result id="{{ result.result_id }}" xlink:href="{{ url_for_result(result) }}"{% if result.size %} size="{{ result.size }}"{% endif %}{% if result.mime_type %} mime-type="{{ result.mime_type }}"{% endif %}/>
  {%- endfor %}
</uws:results>
